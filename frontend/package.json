{
  "name": "ecommerce-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "layers/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:fashion": "turbo run dev --filter fashion",
    "dev:home": "turbo run dev --filter home",
    "dev:general": "turbo run dev --filter general",
    "build": "turbo run build",
    "generate": "turbo run generate",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.6.0",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "nuxt": "^3.15.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-tsc": "^3.2.4"
  },
  "packageManager": "bun@1.3.2"
}
